<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Potger-connect |
			{% block title %}{% endblock %}
		</title>
		{% block css %}
			<link rel="stylesheet" href="{{ asset('style-sheets/css/global.css') }}">
			<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
		{% endblock %}
	</head>
	<body>


		{% set route = app.request.get('_route') %}

		<nav
			class="navbar">
			<a class="nav-link " href="{{ path('accueil') }}">Accueil</a>
			{#<a class="nav-link {% if route == 'home' %}active{% endif %}" aria-current="page" href="{{ path('home') }}">Accueil</a>#}
			<a class="nav-link {% if route == 'register' %}active{% endif %}" href="{{ path('register') }}">Créer profil</a>
			<a class="nav-link {% if route == 'users' %}active{% endif %}" href="{{ path('users') }}">Nos producteurs</a>
			<a class="nav-link {% if route == 'produits' %}active{% endif %}" href="{{ path('produits') }}">Nos produits</a>
			{#<a class="nav-link" href="{{ path('gerer-profil') }}">Gérer project</a>#}
			{% if app.user %}
				<a class="nav-link " href="{{ path('user-profil') }}">Mon profil</a>
			{% endif %}
			<a class="nav-link {% if route == 'app_login' %}active{% endif %}" href="{{ path('app_login') }}">Login</a>
			<a class="nav-link " href="{{ path('app_logout') }}">Logout</a>

		</nav>

		<div id="margin-body">
		{% block body %}Cette page est vide.
		{% endblock %}
		</div>


		<footer
			class="footer">
			{#<a class="nav-link {% if route == 'home' %}active{% endif %}" aria-current="page" href="{{ path('home') }}">Accueil</a>#}
			<a class="nav-link {% if route == 'register' %}active{% endif %}" href="{{ path('register') }}">Créer profil</a>
			<a class="nav-link {% if route == 'users' %}active{% endif %}" href="{{ path('users') }}">Nos producteurs</a>
			<a class="nav-link {% if route == 'produits' %}active{% endif %}" href="{{ path('produits') }}">Nos produits</a>
			{#<a class="nav-link" href="{{ path('gerer-profil') }}">Gérer project</a>#}
			{% if app.user %}
				<a class="nav-link " href="{{ path('user-profil') }}">Mon profil</a>
			{% endif %}
			<a class="nav-link {% if route == 'app_login' %}active{% endif %}" href="{{ path('app_login') }}">Login</a>
			<a class="nav-link " href="{{ path('app_logout') }}">Logout</a>

		</footer>


		{% block js %}
			<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
		{% endblock %}


	</body>
</html>
