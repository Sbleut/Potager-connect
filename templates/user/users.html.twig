{% extends "layout/layout.html.twig" %}

{% block title %}Tous les producteurs
{% endblock %}

{% block body %}
	<div class="container">
		{% for user in users %}
		<div class="card mb-3 flex-row{% if (user.id%2 == 1) %} flex-row-reverse {% endif %}">
			<img class="img-card" src="{{asset('assets/portraits/' ~ user.portrait)}}" alt="Card image cap">
			<div class="card-body d-flex flex-column justify-content-around">
				<h5 class="card-title">{{ user.prenom }} {{ user.nom }}</h5>
				<p class="card-text">Bientôt ici la possibilité d'écrire votre biopic et de raconter votre épopée agricole.</p>
				<p class="card-text">
					<small class="text-muted">{{ user.email }}</small>
					<a href="{{ path('user-retrieve', {'id': user.id})}}">Voir le profil</a>
				</p>
				{% if is_granted('ROLE_ADMIN') %}
					<a href="{{ path('user-delete', {'id': user.id}) }}">Supprimer</a>
				{% endif %}
			</div>
		</div>
		{% endfor %}
		
		
	</div>
	
{% endblock %}
